<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ButtonType?>
<DialogPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Select Your Seat" />

            <GridPane hgap="10" vgap="10" fx:id="seatGrid">
                <Label text="A" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="B" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label text="C" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                <Label text="D" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                <Label text="E" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                <Label text="F" GridPane.columnIndex="6" GridPane.rowIndex="0" />
            </GridPane>

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Legend:" />
                <HBox spacing="10">
                    <CheckBox selected="false" disable="true" />
                    <Label text="Available" />
                </HBox>
                <HBox spacing="10">
                    <CheckBox selected="true" disable="true"  />
                    <Label text="Occupied" />
                </HBox>
            </VBox>

        </VBox>
    </content>

    <ButtonType buttonData="OK_DONE" text="Confirm"/>
    <ButtonType buttonData="CANCEL_CLOSE" text="Cancel"/>

</DialogPane>
